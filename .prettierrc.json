{
  "semi": true,
  "singleQuote": false,
  "tabWidth": 4,
  "useTabs": false,
  "trailingComma": "all",
  "insertPragma": true,
  "jsxBracketSameLine": false,
  "requirePragma": false,
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "auto",
  "quoteProps": "as-needed",
  "padding-line-between-statements": [
    { "blankLine": "always", "prev": "const", "next": "*" },
    { "blankLine": "always", "prev": "*", "next": "const" }
  ],
  "overrides": [
    {
      "files": "*.js",
      "options": {
        "semi": true,
        "singleQuote": false,
        "trailingComma": "all",
        "insertPragma": true,
        "jsxBracketSameLine": false,
        "requirePragma": false,
        "bracketSpacing": true,
        "arrowParens": "always",
        "endOfLine": "auto",
        "quoteProps": "as-needed",
          "padding-line-between-statements": [
            { "blankLine": "always", "prev": "const", "next": "*" },
            { "blankLine": "always", "prev": "*", "next": "const" }
          ]
      }
    },
    {
      "files": "*.css",
      "options": {
        "tabWidth": 4
      }
    }
  ]
}
